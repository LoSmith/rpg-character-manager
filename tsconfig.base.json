{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rpg-character-manager/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@viewer-env/*": ["apps/frontend/src/environments/*"],
      "@viewer-app/*": ["apps/frontend/src/app/*"],
      "@viewer-core": ["apps/frontend/src/app/@core"],
      "@viewer-core/*": ["apps/frontend/src/app/@core/*"],
      "@viewer-shared": ["apps/frontend/src/app/@shared"],
      "@viewer-shared/*": ["apps/frontend/src/app/@shared/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
